<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/postagens/create" class="btn btn-primary">Adicionar Postagem</a>
{{#each postagens}}
<div class="card my-2">
    <div class="card-body">
        <h3>{{this.titulo}}</h3>
        <h5>{{this.categoria.nome}}</h5>
        <p><small>{{this.slug}}</small></p>
        <p>{{this.descricao}}</p>
        <p><small>data de criação: {{this.data}}</small></p>
        <a href="/admin/postagens/edit/{{this._id}}" class="btn btn-primary">Editar</a>
        <a href="/admin/postagens/delete/{{this._id}}" class="btn btn-danger">Deletar</a>
    </div>
</div>
{{else}}
    <h3>Nenhuma postagem encontrada.</h3>
{{/each}}